<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>{{title}}</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"
    defer></script>
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <script src="/js/script.js" defer></script>
</head>

<body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a href="/"> <img class="logo" src="/images/med.png" alt="symbol"> </a>
    <form class="d-flex" action="/search">
      <input class="form-control me-2" style="width: 220px;" name="q" type="search" placeholder="Search"
        aria-label="Search" />
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
    <a class="btn btn-outline-success" style="width: 130px; margin: 0px 5px;" href="/view" role="button">View All</a>
    {{#if loggedInUser}}
    {{#eq loggedInUser.role "admin"}}
    <a class="btn btn-outline-success" style="width: 225px;" href="/pathology-create" role="button">New
      Pathology</a>
    {{/eq}}
    {{/if}}

    <div class="container-fluid">
      <a class="navbar-brand" href="#"></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <div class="d-flex align-items-center" style="margin: 0px 10px;">
            {{#if loggedInUser}}
            <h5>Hello {{loggedInUser.name}}!</h5>
            {{/if}}
          </div>


          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
              aria-expanded="false">
              <img src="/images/user.png" alt="">
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">

              {{#if loggedInUser}}
              {{#eq loggedInUser.role "user"}}
              <li>
                <a class="dropdown-item" href="/user-edit" tabindex="-1" aria-disabled="true">edit account</a>
              </li>
              {{/eq}}
              {{#eq loggedInUser.role "doctor"}}
              <li>
                <a class="dropdown-item" href="/user-edit" tabindex="-1" aria-disabled="true">edit account</a>
              </li>

              {{/eq}}
              {{#eq loggedInUser.role "admin"}}
              <li>
                <a class="dropdown-item" href="/admin" tabindex="-1" aria-disabled="true">users profile</a>
              </li>
              {{/eq}}
              <form action="/logout" method="POST">
                <li>
                  <hr class="dropdown-divider" />
                </li>
                <button  id="logout" type="submit">Logout</button>
              </form>
              {{else}}
              <li> <a class="dropdown-item" href="/login" tabindex="-1" aria-disabled="true">Login</a> </li>
              <li>
                <hr class="dropdown-divider" />
              </li>
              <li> <a class="dropdown-item" href="/signup" tabindex="-1" aria-disabled="true">Sign Up</a> </li>

              {{/if}}
            </ul>
          </li>


        </ul>
      </div>
    </div>
  </nav>

  <div class="thebody">
    {{{body}}}
  </div>



  {{!-- <main class="flex-shrink-1">
    <div class="container">
      <p class="lead"><code class="small"><code class="small"></code></p>
    </div>
  </main> --}}


</body>

</html>