<h1>Update {{entity}}</h1>

<form class="mh-100" style="width: 400px; height: 200px; margin: 10px width:"
    action="/update/{{pathology}}/{{organ}}/{{type}}/{{subtype}}/{{_id}}" enctype="multipart/form-data" method="POST">

    <div class="form-group" style="margin: 10px">
        <label>pathology</label>
        <input type="text" class="form-control" name="pathology" value="{{pathology}}" readonly>
    </div>
    <div class="form-group" style="margin: 10px">
        <label>Organ</label>
        <input type="text" class="form-control" name="organ" value="{{organ}}" readonly>
    </div>
    <div class="form-group" style="margin: 10px">
        <label>Type</label>
        <input type="text" class="form-control" name="type" value="{{type}}" readonly>
    </div>
    <div class="form-group" style="margin: 10px">
        <label>Subtype</label>
        <input type="text" class="form-control" name="subtype" value={{subtype}} readonly>
    </div>

    <div class="form-group" style="margin: 10px">
        <label>Entity</label>
        <input type="text" class="form-control" name="entity" value={{entity}} required>
    </div>
    <div class="form-group" style="margin: 10px">
        <label>Description</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
            name="description">{{description}}</textarea>
    </div>

    <label for="image">Image</label>
    <input class="form-control" type="file" name="image" id="image" value={{macroImg}}>


    <button type="submit" style="margin: 10px" class="btn btn-success">Update</button>
</form>